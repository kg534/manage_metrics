.contents
  .message
    = form_tag({ controller: :menus, action: :group_display }, method: 'get') do
      = select_tag :group_id, options_from_collection_for_select(@groups, :id, :name , params[:group_id]), id: 'select--btn'
      = submit_tag '選択', id: 'submit--btn';
    最新の日報
    - @latest_reports.each do |reports|
      - reports.each do |report| 
        = link_to report.user.name, report_path(report.id)
        = report.active_date  
        = report.order
  .chart
    = column_chart @users.map { |user|                                                              |
      { name: user.name, data: user.reports.where(active_date: Time.now.all_month).map { |report|   |
        report.slice(:active_date, :order).values }                                                 |
      }                                                                                             |
    }                                                                                               |
  .group
    .todo--lists
      .todo--task
        .todo--lists__limit--over
          .todo--lists__limit--over__title
            期限切れ
          - if @tasks_expired.present?
            - @tasks_expired.each do |task|
              = render partial: "menu_tasks", locals: { task: task }
          - else
            .todo--task__nil
              該当するタスクはありません。
      .todo--task
        .todo--lists__limit--within
          .todo--lists__limit--within__title
            期限：今日 
            = @today.strftime("%Y年%m月%d日")
          - if @tasks_today.present?
            - @tasks_today.each do |task|
              = render partial: "menu_tasks", locals: { task: task }
          - else
            .todo--task__nil
              該当するタスクはありません。
      .todo--task
        .todo--lists__limit--within
          .todo--lists__limit--within__title
            期限：明日以降
          - if @tasks_within.present?
            - @tasks_within.each do |task|
              = render partial: "menu_tasks", locals: { task: task }
          - else
            .todo--task__nil
              該当するタスクはありません。
      .todo--task
        .todo--lists__limit--completed
          .todo--lists__limit--completed__title
            完了タスク
          - if @tasks_completed.present?
            - @tasks_completed.each do |task|
              .todo--task__completed
                = link_to task.name, task_path(task)
                = link_to '編集', edit_task_path(task), class: 'task__content--btn'
                = link_to '削除', task_path(task), method: :delete, class: 'task__content--btn'
          - else
            .todo--task__nil
              該当するタスクはありません。    